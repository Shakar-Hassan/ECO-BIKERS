<div class="login-wraper">
  <div class="login-button">
    <button type="button" class="btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" >
      Login
    </button>
  </div>

      <%= image_tag "ecobikers_logo.png", class: "imglogin" %>

    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn sign-up-button" %>

  <!-- Modal -->


  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Login</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
      <div class="simple-form">
    <div class="container">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>

      </div>
    </div>
        </div>
      </div>
    </div>
  </div>
</div>
